<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hse.zhizh.abfclient" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".Activities.ProjectContentsActivity"
            android:label="@string/title_activity_project_contents" >
        </activity>
        <activity
            android:name=".Activities.ProjectInfoActivity"
            android:label="@string/title_activity_project_info" >
        </activity>
        <activity
            android:name=".Activities.BuildsActivity"
            android:label="@string/title_activity_builds" >
        </activity>
        <activity
            android:name=".Activities.BuildInfoActivity"
            android:label="@string/title_activity_build_info" >
        </activity>
    </application>

</manifest>
