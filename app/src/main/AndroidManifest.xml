<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hse.zhizh.abfclient" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/giticonabf1"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.ProjectInfoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_project_info"
            android:screenOrientation="portrait"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
        <activity
            android:name=".Activities.NewBuildActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_build_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.ProjectsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_projects"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.FileChooserActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_file_chooser"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.EditFileActivity"
            android:label="@string/title_activity_edit_file"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
