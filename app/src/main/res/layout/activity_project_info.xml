<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_frontbackground"
    android:orientation="vertical"
    tools:context="hse.zhizh.abfclient.Activities.ProjectInfoActivity"
    android:weightSum="1">

    <android.support.v4.view.ViewPager
        android:id = "@+id/projectInfoPager"
        android:layout_height="match_parent"
        android:layout_width= "match_parent"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:layout_gravity="top">
    </android.support.v4.view.ViewPager>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="master"
        android:id="@+id/branchButton"
        android:focusableInTouchMode="false"
        android:layout_weight="1"
        android:layout_gravity="bottom|left"
        android:onClick="onBranchButtonClick"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        style="@style/MergeButton" />

</LinearLayout>

